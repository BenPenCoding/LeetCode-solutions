# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeKLists(self, lists: List[Optional[ListNode]]) -> Optional[ListNode]:
        
        if not lists:

            return None

        def mergeTwoLists(list1, list2):

            p3 = ListNode()
            curr = p3

            while list1 and list2:

                if list1.val < list2.val:

                    curr.next = list1
                    list1 = list1.next

                else:

                    curr.next = list2
                    list2 = list2.next

                curr = curr.next

            if list1:

                curr.next = list1

            if list2:

                curr.next = list2

            return p3.next


        firstList = lists.pop()

        for List in lists:

            firstList = mergeTwoLists(firstList, List)

        return firstList
